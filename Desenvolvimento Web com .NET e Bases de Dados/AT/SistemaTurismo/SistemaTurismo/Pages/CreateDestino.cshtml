@page
@model SistemaTurismo.Pages.CreateDestinoModel

@{
    ViewData["Title"] = "Adicionar Destino";
    // 5 - Cadastro de Entidade com Validação
}

<h1>Adicionar</h1>

<h4>Destino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Destino.Nome" class="control-label"></label>
                <input asp-for="Destino.Nome" class="form-control" />
                <span asp-validation-for="Destino.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Destino.Pais" class="control-label"></label>
                <input asp-for="Destino.Pais" class="form-control" />
                <span asp-validation-for="Destino.Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="IndexDestino">Voltar a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
