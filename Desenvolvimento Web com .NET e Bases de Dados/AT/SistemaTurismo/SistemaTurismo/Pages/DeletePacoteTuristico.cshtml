@page
@model SistemaTurismo.Pages.DeletePacoteTuristicoModel

@{
    ViewData["Title"] = "Deletar Pacote Turistico";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar esse pacote turistico?</h3>

<div>
    <h4>Pacote Turistico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-2">
            Data Início
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
        </dd>
        <dt class="col-sm-2">
            Capacidade Máxima
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.CapacidadeMaxima)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Preco)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="PacoteTuristico.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-page="IndexPacoteTuristico">Voltar a listagem</a>
    </form>
</div>
