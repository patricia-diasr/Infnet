@page
@model SistemaTurismo.Pages.DeleteModel

@{
    ViewData["Title"] = "Deletar Reserva";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar esse reserva?</h3>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reserva.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reserva.Cliente.Email)
        </dd>
        <dt class="col-sm-2">
            Pacote Túristico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reserva.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-2">
            Data Reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reserva.DataReserva)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reserva.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-page="IndexReserva">Voltar a listagem</a>
    </form>
</div>
