@page
@model IndexModel
@{
    ViewData["Title"] = "Loja";
}

<style>
    .main-section {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

        .main-section h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #2c3e50;
        }

    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .product-table th,
        .product-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .product-table th {
            background-color: #2c3e50;
            color: #fff;
        }

        .product-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>

<section class="main-section">
    <h1>@ViewData["Title"]</h1>
    <p>Confira os nossos produtos:</p>

    <table class="product-table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.Produtos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</section>
