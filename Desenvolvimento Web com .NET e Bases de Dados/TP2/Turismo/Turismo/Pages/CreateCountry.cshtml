@page
@model CreateCountryModel
@{
}
<div class="city-form-container">
    <div class="form-header">
        <i class="fas fa-city city-icon"></i>
        <h2>Cadastrar País</h2>
        <p class="form-subtitle">Faça o cadastro de um país</p>
    </div>
<form method="post" class="city-form">
    <div class="form-group">
        <label asp-for="Entrada.CountryName">Nome do País</label>
        <div class="input-group">
            <span class="input-group-icon"><i class="fas fa-map-marker-alt"></i></span>
             <input asp-for="Entrada.CountryName" class="form-control" />
        </div>
            <span asp-validation-for="Entrada.CountryName" class="validation-message"></span>
    </div>
    <div class="form-group">
        <label asp-for="Entrada.CountryCode">Código do País</label>
        <div class="input-group">
            <span class="input-group-icon"><i class="fas fa-map-marker-alt"></i></span>
            <input asp-for="Entrada.CountryCode" class="form-control" />
        </div>
        <span asp-validation-for="Entrada.CountryCode" class="validation-message"></span>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn-submit">
            <i class="fas fa-save"></i> Cadastrar País
        </button>
    </div>
</form>

@if (Model.MensagemSucesso != null)
{
    <div class="success-message">
        <i class="fas fa-check-circle"></i>
        <p>@Model.MensagemSucesso</p>
    </div>
}

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}