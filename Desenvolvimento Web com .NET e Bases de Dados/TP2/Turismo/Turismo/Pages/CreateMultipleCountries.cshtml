@page
@model Turismo.Pages.CreateMultipleCountriesModel
@{
}

<div class="city-form-container">
    <div class="form-header">
        <i class="fas fa-city city-icon"></i>
        <h2>Cadastrar Múltiplos Países</h2>
        <p class="form-subtitle">Preencha os campos para cadastrar diversos países</p>
    </div>

    <form method="post" class="city-form">
        @for (int i = 0; i < Model.Entradas.Count; i++)
        {
            <div class="form-group">
                <label asp-for="Entradas[i].NomePais">Nome do País</label>
                <div class="input-group">
                    <span class="input-group-icon"><i class="fas fa-map-marker-alt"></i></span>
                    <input asp-for="Entradas[i].NomePais" class="form-control" />
                </div>
                <span asp-validation-for="Entradas[i].NomePais" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Entradas[i].CodigoPais">Código do País</label>
                <div class="input-group">
                    <span class="input-group-icon"><i class="fas fa-map-marker-alt"></i></span>
                    <input asp-for="Entradas[i].CodigoPais" class="form-control" />
                </div>
                <span asp-validation-for="Entradas[i].CodigoPais" class="validation-message"></span>
            </div>

            <hr style="margin: 30px 0; border: none; border-top: 1px solid #ecf0f1;" />
        }

        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Cadastrar Países
            </button>
        </div>
    </form>

    @if (Model.PaisesCadastrados.Any())
    {
        <div class="success-message">
            <i class="fas fa-check-circle"></i>
            <p>Países cadastrados com sucesso:</p>
        </div>

        <ul style="margin-top: 15px; padding-left: 20px; color: var(--dark-color);">
            @foreach (var pais in Model.PaisesCadastrados)
            {
                <li>@pais.Nome (@pais.Codigo)</li>
            }
        </ul>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
